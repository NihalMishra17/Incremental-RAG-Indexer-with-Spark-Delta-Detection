<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set root level to INFO to see all messages -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- Suppress noisy Spark internal logs -->
    <logger name="org.apache.spark" level="WARN"/>
    <logger name="org.apache.hadoop" level="WARN"/>
    <logger name="org.sparkproject" level="WARN"/>
    <logger name="org.apache.parquet" level="WARN"/>
    <logger name="org.apache.pdfbox.pdmodel.font" level="ERROR"/>

    <!-- Keep our application logs at INFO -->
    <logger name="com.cs441.hw2" level="INFO"/>
</configuration>